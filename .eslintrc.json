{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": { 
      "no-console": 2,
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "semi": ["error", "always"],
      "no-unused-vars": "warn",
      "no-async-promise-executor": "error",
      "no-return-await": "error"
    }
  }